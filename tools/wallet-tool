#!/bin/bash

set -e

# Check if the jar has been built.
if [ ! -e target/trustpluscoinj-tools-*.jar ] || [[ "$ALWAYS_BUILD_WALLETTOOL" != "" ]]; then
  echo "Compiling WalletTool to a JAR"
  cd ../core
  mvn install -DskipTests
  cd ../tools
  [ -e target/trustpluscoinj-tools-*.jar ] && rm target/trustpluscoinj-tools-*.jar
  mvn package -DskipTests
fi

java -server -jar target/trustpluscoinj-tools-*.jar $*
